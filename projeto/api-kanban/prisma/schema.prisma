generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Column {
  id          Int      @id @default(autoincrement())
  description String
  sequence    Int
  deleted     Boolean? @default(false)
  tasks       Task[]   @relation("ColumnTasks")
}

model Task {
  id          Int      @id @default(autoincrement())
  description String
  sequence    Int
  deleted     Boolean? @default(false)

  id_column Int?
  column    Column? @relation("ColumnTasks", fields: [id_column], references: [id])
}
